<!-- BEGIN: Content-->
<div class="app-content content">
    <div class="content-overlay"></div>
    <div class="header-navbar-shadow"></div>
    <div class="content-wrapper container-xxl p-0">
        <div class="content-header row"></div>
        <div class="content-body">
            <input type="text" class="d-none" id="ejercicios" value="{{ejerciciosJson}}">

            <section class="invoice-list-wrapper">
                <div class="card">
                    <div class="card-header border-bottom">
                        <h6 class="card-title">Programas</h6>
                        <div class="dt-buttons d-inline-flex">
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                                data-bs-target="#add-new-programa">
                                <i data-feather='plus'></i> Agregar Programa
                            </button>
                            <!-- Modal -->
                            <div class="modal fade text-start" id="inlineForm" tabindex="-1"
                                aria-labelledby="myModalLabel33" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h4 class="modal-title" id="myModalLabel33">Inline Login Form</h4>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                        </div>
                                        <form action="#">
                                            <div class="modal-body">
                                                <label>Email: </label>
                                                <div class="mb-1">
                                                    <input type="text" placeholder="Email Address"
                                                        class="form-control" />
                                                </div>

                                                <label>Password: </label>
                                                <div class="mb-1">
                                                    <input type="password" placeholder="Password"
                                                        class="form-control" />
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-primary"
                                                    data-bs-dismiss="modal">Login</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>

                            <!-- Calendar Add/Update/Delete event modal-->
                            <div class="modal event-sidebar fade" id="add-new-programa" tabindex="-1"
                                aria-labelledby="pricingModalTitle" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered modal-xl">
                                    <div class="modal-content">
                                        <div class="modal-header bg-transparent pb-0">
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <div class="row match-height">
                                                <div class="col-12 col-lg-8">
                                                    <div class="blog-edit-wrapper">
                                                        <div class="row">
                                                            <div class="col-12">
                                                                <div class="card">
                                                                    <form class="card-body" id="programaForm">
                                                                        <div class="card-header p-0 row">
                                                                            <div class="col-12 mb-1 mb-lg-50">
                                                                                <h2 class="text-primary mb-0">Agregar
                                                                                    Programa</h2>
                                                                            </div>
                                                                            <div class="col-12 mb-1 mb-md-0">
                                                                                <label class="form-label"
                                                                                    for="blog-edit-title">Titulo</label>
                                                                                <input type="text" name="titulo"
                                                                                    id="tituloPrograma"
                                                                                    class="form-control" value=""
                                                                                    required />
                                                                            </div>

                                                                        </div>
                                                                        <!-- Form -->
                                                                        <div class="mt-1 mt-lg-50">
                                                                            <div class="row align-items-center">
                                                                                <input type="text" name="idPrograma"
                                                                                    id="idPrograma" class="d-none">
                                                                                 <textarea name="descripcion"
                                                                                    id="textarea"
                                                                                    class="d-none"></textarea>
                                                                                <div class="col-12">
                                                                                    <div class="mb-1">
                                                                                        <label class="form-label"
                                                                                            for="">Categorias</label>
                                                                                        <div class="box"
                                                                                            id="infoCategorias">

                                                                                        </div>
                                                                                    </div>
                                                                                </div>

                                                                                <div class="col-12">
                                                                                    <div class="mb-1">
                                                                                        <div id="editor1">
                                                                                            <p>Empieza a crear tu
                                                                                                Programa Aquí</p>

                                                                                        </div>
                                                                                        <p class="d-none fw-bolder text-danger my-50" id="msjEditor">Debes agregar al menos 1 ejercicio</p>
                                                                                    </div>

                                                                                </div>
                                                                                <div class="col-12 mb-1">
                                                                                    <div class="rounded">
                                                                                        <label class="form-label">Subir
                                                                                            Archivo</label>
                                                                                        <div
                                                                                            class="d-flex flex-column flex-md-row">
                                                                                            <div class="featured-info">
                                                                                                <div
                                                                                                    class="d-inline-block">
                                                                                                    <input
                                                                                                        class="form-control"
                                                                                                        type="file"
                                                                                                        id="blogCustomFile"
                                                                                                        accept="image/*" />
                                                                                                </div>
                                                                                            </div>
                                                                                        </div>
                                                                                    </div>
                                                                                </div>
                                                                                <div class="col-12 mt-50">
                                                                                    <button type="submit"
                                                                                        class="btn btn-primary me-1">Guardar</button>
                                                                                    <button type="reset"
                                                                                        class="btn btn-outline-secondary">Cancelar</button>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                        <!--/ Form -->
                                                                    </form>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-12 col-lg-4">
                                                    <section id="dd-with-handle">
                                                        <div class="row">
                                                            <div class="col-sm-12">
                                                                <div class="card">
                                                                    <div class="card-header">
                                                                        <h4 class="card-title">Listado de Ejercicios
                                                                        </h4>
                                                                    </div>

                                                                    <div class="card-body">
                                                                        <div class="input-group mb-1">
                                                                            <span class="input-group-text"
                                                                                id="basic-addon-search1">
                                                                                <svg xmlns="http://www.w3.org/2000/svg"
                                                                                    width="14" height="14"
                                                                                    viewBox="0 0 24 24" fill="none"
                                                                                    stroke="currentColor"
                                                                                    stroke-width="2"
                                                                                    stroke-linecap="round"
                                                                                    stroke-linejoin="round"
                                                                                    class="feather feather-search">
                                                                                    <circle cx="11" cy="11" r="8">
                                                                                    </circle>
                                                                                    <line x1="21" y1="21" x2="16.65"
                                                                                        y2="16.65"></line>
                                                                                </svg>
                                                                            </span>
                                                                            <input type="text" class="form-control"
                                                                                placeholder="Buscar..."
                                                                                id="buscardorEjercicios">
                                                                        </div>

                                                                        <div class="col-sm-12 mb-1">
                                                                            <select id="categoriasPrograma"
                                                                                class="select2 form-select">
                                                                                <option value="" selected>Seleccionar
                                                                                    Categoría</option>
                                                                                {{#each categorias as |item|}}
                                                                                <option value="{{item.pkIdCategoria}}">
                                                                                    {{item.categoria}}</option>
                                                                                {{/each}}
                                                                            </select>
                                                                        </div>


                                                                        <div class="col-sm-12">
                                                                            <ul class="list-group h-150"
                                                                                id="handle-list-1">
                                                                                
                                                                            </ul>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </section>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!--/ Calendar Add/Update/Delete event modal-->

                        </div>
                    </div>
                    <div class="card-datatable table-responsive">
                        <div id="" class="dataTables_wrapper dt-bootstrap5 no-footer">
                            <table class="table dataTable no-footer dtr-column" id="programas-Table" role="grid">

                                <!-- Cabezera de la tabla -->
                                <thead>
                                    <tr role="row">
                                        <th class="sorting" tabindex="0" rowspan="1" colspan="1" style="width: 270px;">
                                            Nombre</th>
                                        <th class="cell-fit sorting_disabled" rowspan="1" colspan="1"
                                            style="width: 80px;">Acciones</th>
                                    </tr>
                                </thead>

                                <!-- Cuerpo de la tabla-->
                            </table>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
<!-- END: Content-->

